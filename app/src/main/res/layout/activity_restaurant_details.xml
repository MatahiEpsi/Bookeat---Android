<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestaurantDetailsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewRestaurantDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/textViewNameDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/horaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12h - 23h"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/textViewDescriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonReserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserver"
        android:textSize="25dp"

        android:layout_alignParentBottom="true"
        android:textColor="@android:color/black"
        />
</RelativeLayout>